<!-- /templates/product.slider-composition.liquid -->
{% comment %}
  <style>
  /*Bufix on the non disparition of boostrap modal Fades*/
    .fade.in{
      z-index: 54;
    }
  </style>
{% endcomment %}

<div class="product-v2">
    <div itemscope itemtype="http://schema.org/Product">
        <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
        <meta itemprop="image" content="{{ product.featured_image.src | img_url: 'grande' }}"> 
        {% assign current_variant = product.selected_or_first_available_variant %}
        <div class="grid product-single">
            <!-- Product Title -->
                  <div class="product_titles grid__item large--one-half push--large--one-quarter">
                      <h1 class="product-single__title" itemprop="name">{{ product.title }}</h1>
                       {% comment %} <h2 style="font-weight: 400;">{{ product.metafields.global.title_tag }}</h2>{% endcomment %}
                  </div>

            {% include 'slider' %}
            {% include 'product-box' %}
            <!-- Product description  -->
                <div class="product-single__description rte" itemprop="description" style="margin-top: 0px;">
                    <br>
                    <br>
                    <!-- icone-line -->
                        <div class="container text-center" id="icone-line">
                            <hr class="hr--clear">
                            {% for tag in product.tags %}
                                  <img src="//cdn.shopify.com/s/files/1/1063/7402/files/{{ tag | handleize | capitalize | replace: '-', '_' }}_100x100.png?" alt="{{tag}}" data-toggle="tooltip" data-placement="top" data-original-title="{{ tag }}">

                            {% endfor %}
                        </div>
                    <hr class="hr--clear">
                    <!-- product-special-description -->
                              <div class="container" id="product-special-description">
                                  <div class="row">
                                      <h2 class="text-center">Le conseil du paysagiste</h2>
                                      <div class="col-md-3 img-fluid offset-lg-1 col-xs-12">
                                          <img src="//cdn.shopify.com/s/files/1/1063/7402/files/Arthur_185x185.png?" alt="Arthur Paysagiste" style="border-radius: 50%; -webkit-filter: grayscale(100%); filter: grayscale(100%);">
                                      </div>
                                      <div class="col-md-7 col-xs-12">
                                          <p class="text-left">{{ product.description }}</p>
                                          <p class="text-right"> Arthur. </p>
                                      </div>
                                  </div>
                              </div>
                    <hr class="hr--clear">
                    

                    {% include 'product-description' %}

                </div>
        </div>

        <!-- Social Sharing -->
                {% if settings.social_sharing_products %} {% include 'social-sharing' %}
                {% endif %}


        {% include 'customers-images' %}

        {% include 'related-products' %}
          {% comment %}

            *IMPORTANT:*
            This theme uses a customized version of `option_selection.js` to support using radio inputs for
            color and size variants. The custom version is in `variant_selection.js`.

            If you wish to enable the default dropdowns for size and color
            you can change the liquid asset tag below from:

            {{ 'variant_selection.js' | asset_url | script_tag }}

            to

            {{ 'option_selection.js' | shopify_asset_url | script_tag }}

            If you use the default `option_selection.js` the labels for the dropdowns will
            appear outside the dropdown.

            You will also need to change `.radio-wrapper` to `.selector-wrapper` below.

          {% endcomment %}
          {{ 'option_selection.js' | shopify_asset_url | script_tag }}


          {% include 'selectCallback' %}


          <script>
             jQuery(document).ready(function($) {
              $('.carousel').carousel({
                  interval: 8000
              });

              //Handles the carousel thumbnails
              $('[id^=carousel-selector-]').click(function() {
                  var id = this.id.substr(this.id.lastIndexOf("-") + 1);
                  var id = parseInt(id);
                  $('#slider-products-v2').carousel(id);
              });

              });
        </script>

    </div>
</div>
